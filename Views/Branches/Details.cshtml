@model ApplicationDevelopmentCourseProject.Models.Branch

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Branch</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BranchName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.XCoordinate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.XCoordinate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YCoordinate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YCoordinate)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary btn-lg btn-block" onclick="location.href='@Url.Action("OrdersFromSpecificBranch", "Branches", new { branchID = Model.Id })'">Show orders from this branch</button>
    <a asp-controller="Users" asp-action="AdminPanel">Back to Admin Panel</a>
</div>
